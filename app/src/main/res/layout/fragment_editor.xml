<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EditorFragment">


    <com.testing.vladyslav.cubes.CubeSurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/txt_isTouched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"/>


    <RelativeLayout
        android:id="@+id/tools_row"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width = "50dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            app:srcCompat="@mipmap/ic_menu_left" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/img_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="0dp"
                app:srcCompat= "@mipmap/icon_add"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/img_change_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                app:srcCompat= "@mipmap/icon_change_color"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="5dp"
                app:srcCompat= "@mipmap/icon_delete"
                android:layout_weight="1"/>


        </LinearLayout>


        <ImageView
            android:id="@+id/img_repeat"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@mipmap/ic_menu_right" />

    </RelativeLayout>


    <com.testing.vladyslav.cubes.CustomRelativeLayout
        android:id="@+id/editor_colors_row"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">

    </com.testing.vladyslav.cubes.CustomRelativeLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/figure_colors_row"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:gravity="bottom"
        android:orientation="vertical">

    </android.support.v7.widget.LinearLayoutCompat>

    <ImageView
        android:id="@+id/ic_menu_open"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_menu" />


    <RelativeLayout
        android:id="@+id/editorMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhiteTransparent">

        <ImageView
            android:id="@+id/ic_menu_close"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:padding="10sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="5sp"
            app:srcCompat="@mipmap/ic_menu_up" />

        <LinearLayout
            android:id="@+id/menu_layout"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/ic_menu_close"
            android:layout_marginEnd="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:fontFamily="@font/sfuidisplay_thin"
                android:gravity="right"
                android:text="Open"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:fontFamily="@font/sfuidisplay_thin"
                android:gravity="right"
                android:text="Save"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_save_as"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:fontFamily="@font/sfuidisplay_thin"
                android:gravity="right"
                android:text="Save as"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_view_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:fontFamily="@font/sfuidisplay_thin"
                android:gravity="right"
                android:text="View mode"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>

    <include
        layout="@layout/layout_icon_back_black"
        android:id="@+id/back"/>

    <TextView
        android:id="@+id/debugTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>


</RelativeLayout>